#include <stdio.h>
#include <stdlib.h>

#define MAX 100

typedef struct Queue {
    int items[MAX];
    int front, rear;
} Queue;

void initQueue(Queue* q) {
    q->front = q->rear = -1;
}

int isEmpty(Queue* q) {
    return q->front == -1;
}

void enqueue(Queue* q, int value) {
    if (q->rear == MAX - 1) return;
    if (q->front == -1) q->front = 0;
    q->items[++q->rear] = value;
}

int dequeue(Queue* q) {
    if (isEmpty(q)) return -1;
    int val = q->items[q->front];
    if (q->front == q->rear) q->front = q->rear = -1;
    else q->front++;
    return val;
}

int bidirectionalSearch(int graph[MAX][MAX], int n, int start, int goal) {
    int visitedStart[MAX] = {0};
    int visitedGoal[MAX] = {0};

    Queue qStart, qGoal;
    initQueue(&qStart);
    initQueue(&qGoal);

    enqueue(&qStart, start);
    visitedStart[start] = 1;

    enqueue(&qGoal, goal);
    visitedGoal[goal] = 1;

    while (!isEmpty(&qStart) && !isEmpty(&qGoal)) {
        // BFS from start
        int u = dequeue(&qStart);
        for (int v = 0; v < n; v++) {
            if (graph[u][v] && !visitedStart[v]) {
                if (visitedGoal[v]) return 1; // Meet point found
                visitedStart[v] = 1;
                enqueue(&qStart, v);
            }
        }

        // BFS from goal
        u = dequeue(&qGoal);
        for (int v = 0; v < n; v++) {
            if (graph[u][v] && !visitedGoal[v]) {
                if (visitedStart[v]) return 1; // Meet point found
                visitedGoal[v] = 1;
                enqueue(&qGoal, v);
            }
        }
    }

    return 0; // No path
}

int main() {
    int n;
    printf("Enter number of vertices: ");
    scanf("%d", &n);

    int graph[MAX][MAX];
    printf("Enter adjacency matrix:\n");
    for (int i = 0; i < n; i++)
        for (int j = 0; j < n; j++)
            scanf("%d", &graph[i][j]);

    int start, goal;
    printf("Enter start and goal vertices: ");
    scanf("%d %d", &start, &goal);

    if (bidirectionalSearch(graph, n, start, goal))
        printf("Path exists between %d and %d\n", start, goal);
    else
        printf("No path exists between %d and %d\n", start, goal);

    return 0;
}
