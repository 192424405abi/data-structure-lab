#include <stdio.h>

int main() {
    int n, i;
    long a = 0, b = 1, c, sum = 1;

    printf("Enter the number of terms: ");
    scanf("%d", &n);

    if (n == 0) {
        printf("Sum = 0");
        return 0;
    }

    if (n == 1) {
        printf("Sum = 0");
        return 0;
    }

    for (i = 3; i <= n; i++) {
        c = a + b;
        sum += c;
        a = b;
        b = c;
    }

    printf("Sum = %ld", sum);

    return 0;
}
