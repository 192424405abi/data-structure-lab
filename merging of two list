#include <stdio.h>
#include <stdlib.h>

struct Node {
    int data;
    struct Node* next;
};

struct Node* createNode(int data) {
    struct Node* newNode = (struct Node*)malloc(sizeof(struct Node));
    newNode->data = data;
    newNode->next = NULL;
    return newNode;
}

void displayList(struct Node* head) {
    struct Node* temp = head;
    while (temp != NULL) {
        printf("%d -> ", temp->data);
        temp = temp->next;
    }
    printf("NULL\n");
}

struct Node* mergeLists(struct Node* head1, struct Node* head2) {
    if (head1 == NULL) return head2;
    if (head2 == NULL) return head1;

    struct Node* merged = NULL;

    if (head1->data <= head2->data) {
        merged = head1;
        merged->next = mergeLists(head1->next, head2);
    } else {
        merged = head2;
        merged->next = mergeLists(head1, head2->next);
    }

    return merged;
}

int main() {
    int n1, n2, i, value;
    struct Node *head1 = NULL, *head2 = NULL, *temp;

    printf("Enter number of nodes in first list: ");
    scanf("%d", &n1);
    for (i = 0; i < n1; i++) {
        printf("Enter value for node %d: ", i + 1);
        scanf("%d", &value);
        struct Node* newNode = createNode(value);
        if (head1 == NULL)
            head1 = newNode;
        else {
            temp = head1;
            while (temp->next != NULL)
                temp = temp->next;
            temp->next = newNode;
        }
    }

    printf("Enter number of nodes in second list: ");
    scanf("%d", &n2);
    for (i = 0; i < n2; i++) {
        printf("Enter value for node %d: ", i + 1);
        scanf("%d", &value);
        struct Node* newNode = createNode(value);
        if (head2 == NULL)
            head2 = newNode;
        else {
            temp = head2;
            while (temp->next != NULL)
                temp = temp->next;
            temp->next = newNode;
        }
    }

    printf("\nFirst List: ");
    displayList(head1);
    printf("Second List: ");
    displayList(head2);

    struct Node* mergedHead = mergeLists(head1, head2);
    printf("\nMerged List: ");
    displayList(mergedHead);

    return 0;
}
